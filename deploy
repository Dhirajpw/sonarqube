pipeline {
    agent any
    stages {
        stage('Pull') {
            steps {
                echo "Successful pull from Git"
                git 'https://github.com/deepak-umre/studentapp.ui.git'
            }
        }
        stage('Build') {
            steps {
                echo "Building with Maven"
                sh 'mvn clean package'
            }
        }
        stage('Deploy on Tomcat') {
            agent {
                label 'tomcat'
            }
            steps {
                script {
                    copyArtifacts(projectName: 'deploy', filter: '*', selector: specific('lastCompleted'), target: ' /opt/apache-tomcat-8.5.99/webapps/') //copy file
                    }
                }
            
        }
    }
}